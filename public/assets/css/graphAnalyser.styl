.graphHeader
  width 100%
  height 0rem
  display flex
  visibility hidden

  .graphHeaderTitle
    color #ffffff
    font-size 3rem
    line-height 8rem
    float left
    padding-left 2rem

.configuration
  color white
  float right

.graphSpace
  width 100%
  height 100%
  padding-top 8rem
  margin-top -8rem
  padding-bottom 5rem
  margin-bottom -5rem

.graphFooter
  width 100%
  height 5rem
  position absolute
  bottom 0
  margin-bottom 0

  .containerSlider
      width 100%
      margin 0 1rem

.node
  stroke: #fff
  stroke-width: 0.1rem

.link
  stroke: #999
  stroke-opacity: .6

.graphAnalyser.card
  position absolute
  right 0
  max-width 25rem
  margin-right 1rem
  max-height 80%
  overflow scroll

td
  vertical-align top

.cardCompanyLogo
  position absolute
  top 0
  right 0
  max-height 2.5rem
  width auto

.card-title
  margin-left 0.3rem

.cardTitleWrapper
  position relative
  text-align left
  margin-bottom 0

.timespan
  color white
  line-height 2.5rem

.apply
  line-height 5rem

.hasPost
  stroke-width 3px
  stroke red

.descriptionText
  font-size 0.7rem

.highlightNode
  fill gray
  stroke black
  stroke-width 2px

.highlightNode.hasPost
  fill red
  stroke black
  stroke-width 2px

.selectedNode
  stroke #35b1e3
  stroke-width 4px

.clickedNode
  stroke #42a91b
  stroke-width 4px

.detailedNode
  fill #000000
